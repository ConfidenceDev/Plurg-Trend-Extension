{
  "manifest_version": 3,
  "name": "Plurg",
  "version": "0.0.2",
  "description": "Share trending topics",
  "permissions": ["activeTab"],
  "icons": {
    "32": "icons/plug-32.png",
    "64": "icons/plug-64.png",
    "128": "icons/plug-128.png"
  },
  "action": {
    "default_icon": {
      "32": "icons/plug-32.png",
      "64": "icons/plug-64.png",
      "128": "icons/plug-128.png"
    },
    "default_title": "Plurg",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
